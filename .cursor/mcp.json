{
    "mcpServers": {
        "taskmaster-ai": {
            "command": "node",
            "args": [
                "./mcp-server/server.js"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "%ANTHROPIC_API_KEY%",
                "PERPLEXITY_API_KEY": "%PERPLEXITY_API_KEY%",
                "MODEL": "%MODEL%",
                "PERPLEXITY_MODEL": "%PERPLEXITY_MODEL%",
                "MAX_TOKENS": 64000,
                "TEMPERATURE": 0.4,
                "DEFAULT_SUBTASKS": 5,
                "DEFAULT_PRIORITY": "medium"
            }
        }
    }
}